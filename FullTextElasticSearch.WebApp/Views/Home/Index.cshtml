@using FullTextElasticSearch.WebApp.Models.ViewModels
@model InformazioniIndiceESViewModel
@{
    ViewBag.Title = "Gestione Indice";
}

<hr />
<div class="row">
    <div class="col-md-3">
        <label class="control-label">
            Server
        </label>
        <input type="text" class="form-control" value="@Model.Server" readonly="readonly" />
    </div>
    <div class="col-md-9"></div>
    <div class="col-md-3">
        <label class="control-label">
            Indice
        </label>
        <input type="text" class="form-control" value="@Model.Indice" readonly="readonly" />
    </div>
    <div class="col-md-12">
        <hr />
        <p style="@(Model.SeIndiceEsiste ? "color:green" : "color:red")">
            @(Model.SeIndiceEsiste ? "Indice già creato" : "L'indice non esiste")
        </p>
    </div>
</div>
@Html.ActionLink("Rigenera Indice", "Reload", "Document", new { area = "" }, new { @class = "btn btn-primary" })
@Html.ActionLink("Aggiorna Documenti", "Update", "Document", new { area = "" }, new { @class = "btn btn-success" })
<hr />
